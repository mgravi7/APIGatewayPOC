# Keycloak Configuration
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Client Secrets (CHANGE THESE IN PRODUCTION!)
# Generate secure secrets using: openssl rand -base64 32
API_GATEWAY_CLIENT_SECRET=gateway-secret-change-in-production
CUSTOMER_SERVICE_CLIENT_SECRET=customer-service-secret-change-in-production
PRODUCT_SERVICE_CLIENT_SECRET=product-service-secret-change-in-production

# Service Configuration
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=api-gateway-poc
KEYCLOAK_ISSUER=http://localhost:8180/realms/api-gateway-poc

# Token Configuration
ACCESS_TOKEN_LIFESPAN=300
REFRESH_TOKEN_LIFESPAN=1800

# WARNING: Set to 'false' or remove test-client in production
ENABLE_TEST_CLIENT=true

# Production Settings (uncomment for production)
# SSL_REQUIRED=external
# HOSTNAME_STRICT=true
# HTTP_ENABLED=false
